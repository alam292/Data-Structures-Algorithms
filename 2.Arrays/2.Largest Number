import java.util.*;

public class Larger_number {

    public static int LargestNumber(int number[]){

        int largest = Integer.MIN_VALUE;                // minus infinity
        int smallest = Integer.MAX_VALUE;               // plus infinity

        for(int i=0; i<number.length; i++){
            if(largest<number[i]){
                largest = number[i];
            }
            if(smallest > number[i]){
                smallest = number[i];
            }
        }
        System.out.println("Smallest value is : " +smallest);
        return largest;
    }

    public static void main(String[] args) {
        
        Scanner sc = new Scanner(System.in);

        // for input data
        int number[] = new int[5];
        System.out.print("Enter an arrays of elements : ");
        for(int i=0; i<number.length; i++){
            number[i] = sc.nextInt();
        }
        
        System.out.println("Largest value is : " +LargestNumber(number));
    }
}

/*
Enter an arrays of elements : 45 78 61 98 100
Smallest value is : 45
Largest value is : 100
 */

import java.util.*;

public class zeros_ones {

    public static void ZerosOnes(int number){

        // for outer loop
        for(int i = 1;i<=number;i++){

            // for print o & 1
            for(int j =1 ; j<=i;j++){
                if((i+j)%2==0){
                    System.out.print("1 ");
                }
                else{
                    System.out.print("0 ");
                }
            }
            System.out.println();
        }
    }

    public static void main(String[]args){

        Scanner sc = new Scanner(System.in);
        System.out.print("Enter a number of line : ");
        int number = sc.nextInt();

        ZerosOnes(number);
    }
}

/*
 * Enter a number of line : 5
1
0 1
1 0 1
0 1 0 1
1 0 1 0 1

 */
